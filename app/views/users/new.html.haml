%h1= "Sign Up"

= form_for @user do |f|
  - if @user.errors.any?
    %ul.errors
      - @user.errors.full_messages.each do |message|
        %li= message
  %p
    = f.label :email
    = f.text_field :email
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.label :password_confirmation, 'Confirm Password'
    = f.password_field :password_confirmation

  = f.submit 'Sign Up'
